        span=message
    form(method="post",enctype="multipart/form-data")
        label(for="video") Upload Video
        input(name="video",type="file",aceept="video/*",id="video")
        input(name="title",placeholder="write your new video",type="text",required=true,maxlength="80")
        input(name="description",placeholder="desrciption",type="text",required=true,minlength="20")
        input(name="hashtags",placeholder="hastags, seperate with comma",type="text",required=true)
        input(value="Submit",type="submit")
