doctype html
html(lang="ko")
    head
        title #{title} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=title
            nav
                ul
                    li
                        a(href="/video/uploadvideo") Upload video
                    li 
                        a(href="/") Home
                    li
                        a(href="/search") Search
                    if !login 
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
                    else 
                        li
                            a(href="/profile") #{user.name}'s profile
                        li 
                            a(href="/logout") Logout 
        main 
            block content
            block main
            include partials/footer.pug